{
  "manifest_version": 2,
  "name": "Toodle",
  "version": "1.0",

  "browser_action": {
    "default_title": "Toodle"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_security_policy": "default-src 'self' 'unsafe-eval'",

  "permissions": [
    "nativeMessaging"
  ],

  "applications": {
    "gecko": {
      "id": "toodle@mozilla.com",
      "strict_min_version": "57.0"
    }
  }
}
